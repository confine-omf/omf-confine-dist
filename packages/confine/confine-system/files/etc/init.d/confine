#!/bin/sh /etc/rc.common


START=81


start() {

    confine.lib confine_system_check

    confine_sliver_stop all

    if [ "$( uci -q get confine.node.state )" = "started" ] ; then
	confine.lib uci_set confine.node.state=applied
    fi

    confine_node_enable
}


stop() {

    confine_sliver_stop all

    if [ "$( uci -q get confine.node.state )" = "started" ] ; then
	confine.lib uci_set confine.node.state=applied
    fi
    
}
